<!-- views/transfer.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transfer Money</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Transfer Money</h2>

    <p class="text-center mb-4 text-gray-700">
      Sending money to: <span class="font-semibold"><%= user.firstName %> <%= user.lastName %></span>
    </p>

    <form action="/api/v1/account/transferMoney" method="POST" class="space-y-4">
      <!-- Hidden input to hold recipient userId -->
      <input type="hidden" name="to" value="<%= user._id %>">

      <!-- Amount -->
      <div>
        <label for="amount" class="block text-sm font-medium text-gray-700">Amount</label>
        <input type="number" step="0.01" min="0" id="amount" name="amount" 
          class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" 
          placeholder="Enter amount to transfer" required>
      </div>

      <!-- Submit -->
      <button type="submit" 
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium">
        Transfer
      </button>
    </form>

    <p class="text-center text-sm text-gray-600 mt-4">
      <a href="/api/v1/user/dashboard" class="text-blue-600 hover:underline">Back to Dashboard</a>
    </p>
  </div>

</body>
</html>
