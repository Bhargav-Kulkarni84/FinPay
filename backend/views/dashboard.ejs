<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-4 text-center">User Dashboard</h1>

    <!-- Current User Balance -->
    <div class="bg-white shadow rounded-lg p-4 mb-6 text-center">
      <p class="text-lg text-gray-700">
        Your Balance: <span class="font-semibold">â‚¹<%= currentUserBalance.toFixed(2) %></span>
      </p>
    </div>

    <!-- Users Table -->
    <div class="bg-white shadow rounded-lg p-4">
      <table class="min-w-full table-auto">
        <thead>
          <tr class="bg-gray-200 text-gray-700">
            <th class="px-4 py-2 text-left">#</th>
            <th class="px-4 py-2 text-left">Full Name</th>
            <th class="px-4 py-2 text-left">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, index) => { %>
            <tr class="border-b">
              <td class="px-4 py-2"><%= index + 1 %></td>
              <td class="px-4 py-2"><%= user.firstName %> <%= user.lastName %></td>
              <td class="px-4 py-2">
                <a href="/api/v1/account/transfer/<%= user._id %>" 
                   class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                  Send Money
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Logout button -->
    <div class="text-center mt-6">
      <form action="/api/v1/user/logout" method="POST">
        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg">
          Logout
        </button>
      </form>
    </div>

  </div>

</body>
</html>
